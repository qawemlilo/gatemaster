extends ../layout

block content
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      legend Forgot Password
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        p Enter your cell number below and we will send you password reset instructions.
        label.control-label(for='cell') Cell
        input.form-control(type='cell', name='cell', id='cell', placeholder='Cell', autofocus=true)
      .form-group
        button.btn.btn-primary(type='submit')
          i.fa.fa-key
          | Reset Password
